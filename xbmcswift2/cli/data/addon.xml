<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="{plugin_id}" name="{plugin_name}" version="0.1" provider-name="{provider_name}">
  <requires>
    <import addon="xbmc.python" version="1.0"/>
    <!-- Required for getflashvideo.py -->
    <import addon="script.module.beautifulsoup" version="3.0.8"/>
    <import addon="script.module.xbmcswift" version="0.1"/>
  </requires>
  <extension point="xbmc.python.pluginsource" library="addon.py">
    <provides>video</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <platform>all</platform>
    <summary>Summary for {plugin_name}</summary>
    <description>Description for {plugin_name}</description>
  </extension>
</addon>
